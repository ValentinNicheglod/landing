---
// Enums
import { ProjectFilters } from "../models/enums/filters.enum";

// Translations
import projectsTranslations from "../locales/projects.locales.json";
const lang: "en" | "es" = Astro.currentLocale as "en" | "es";
const translations = projectsTranslations[lang];

const filterOptions = [
  {
    label: translations.all,
    shortLabel: translations.allShort,
    value: ProjectFilters.ALL,
  },
  {
    label: translations.design,
    shortLabel: translations.designShort,
    value: ProjectFilters.DESIGN,
  },
  {
    label: translations.dev,
    shortLabel: translations.devShort,
    value: ProjectFilters.DEV,
  },
];
---

<div id="projects-filter" class="md:shadow-sm filters" role="tablist">
  {
    filterOptions.map((option) => (
      <button
        id={`project-filter-${option.value}`}
        data-value={option.value}
        aria-label={`${translations.filterBy} ${option.label}`}
        role="tab"
      >
        <div class="block md:hidden">{option.shortLabel}</div>
        <div class="md:block hidden">{option.label}</div>
      </button>
    ))
  }
  <div class="absolute p-1 w-full h-full">
    <div id="projects-filter-indicator" class="indicator"></div>
  </div>
</div>
<style>
  @import url("../styles/filters.scss");
</style>
